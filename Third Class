01 Exercise
$i = 0;
while ($i < 5) {
	echo "Hello Bangladesh<br>";
	$i++;
}

$i = 0;
while ($i < 10) {
	$j = $i + $i;
	echo "$i+$i=$j<br>";
	$i++;
}
